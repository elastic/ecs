                  "ignore_above": 1024,
                  "type": "keyword"
                }
              }
            },
            "system": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "token": {
              "properties": {
                "type": {
                  "ignore_above": 1024,
                  "type": "keyword"
                }
              }
            },
            "tool": {
              "properties": {
                "call": {
