                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "name": {
                  "ignore_above": 1024,
                  "type": "keyword"
                }
              }
            },
            "operation": {
              "properties": {
                "name": {
                  "ignore_above": 1024,
                  "type": "keyword"
                }
              }
            },
            "output": {
              "properties": {
                "type": {
                  "ignore_above": 1024,
                  "type": "keyword"
                }
              }
            },
            "request": {
              "properties": {
                "choice": {
                  "properties": {
                    "count": {
                      "type": "integer"
                    }
                  }
                },
                "encoding_formats": {
                  "type": "nested"
                },
                "frequency_penalty": {
                  "type": "double"
                },
