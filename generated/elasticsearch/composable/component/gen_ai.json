                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "presence_penalty": {
                  "type": "double"
                },
                "seed": {
                  "type": "integer"
                },
                "stop_sequences": {
                  "type": "nested"
                },
                "temperature": {
                  "type": "double"
                },
                "top_k": {
                  "type": "double"
                },
                "top_p": {
                  "type": "double"
                }
