    "ecs_version": "1.12.2"
  },
  "template": {
    "mappings": {
      "properties": {
        "user_agent": {
          "properties": {
            "device": {
              "properties": {
                "name": {
                  "ignore_above": 1024,
                  "type": "keyword"
                }
              }
            },
            "name": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "original": {
              "fields": {
                "text": {
                  "type": "match_only_text"
