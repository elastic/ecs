{
  "_meta": {
    "documentation": "https://www.elastic.co/guide/en/ecs/current/ecs-entity.html",
    "ecs_version": "9.2.0+exp"
  },
  "template": {
    "mappings": {
      "properties": {
        "entity": {
          "properties": {
            "attributes": {
              "type": "object"
            },
            "behavior": {
              "type": "object"
            },
            "display_name": {
              "fields": {
                "text": {
                  "type": "match_only_text"
                }
              },
              "ignore_above": 1024,
              "type": "keyword"
            },
            "id": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "last_seen_timestamp": {
              "type": "date"
            },
            "lifecycle": {
              "type": "object"
            },
            "metrics": {
              "type": "object"
            },
            "name": {
              "fields": {
                "text": {
                  "type": "match_only_text"
                }
              },
              "ignore_above": 1024,
              "type": "keyword"
            },
            "raw": {
              "type": "object"
            },
            "reference": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "source": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "sub_type": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "type": {
              "ignore_above": 1024,
              "type": "keyword"
            }
          }
        }
      }
    }
  }
}
