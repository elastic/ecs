{
  "_meta": {
    "documentation": "https://www.elastic.co/guide/en/ecs/current/ecs-device.html",
    "ecs_version": "8.12.0-dev+exp"
  },
  "template": {
    "mappings": {
      "properties": {
        "device": {
          "properties": {
            "id": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "manufacturer": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "model": {
              "properties": {
                "identifier": {
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "name": {
                  "ignore_above": 1024,
                  "type": "keyword"
                }
              }
            },
            "serial_number": {
              "ignore_above": 1024,
              "type": "keyword"
            }
          }
        }
      }
    }
  }
}
